{
  "name": "selectel-storage-client",
  "version": "0.3.4",
  "description": "Node.js client for Selectel Storage",
  "main": "./dist/bundle.js",
  "scripts": {
    "bundle": "rollup -c",
    "build": "tsc",
    "clean": "rimraf lib/* && rimraf dist/* && rimraf coverage/*",
    "pre-commit": "lint-staged",
    "postbuild": "npm run bundle",
    "prebuild": "npm run clean",
    "prepublishOnly": "npm run build",
    "test": "jest"
  },
  "keywords": [
    "selectel"
  ],
  "lint-staged": {
    "*.ts*": [
      "prettier --write",
      "git add"
    ]
  },
  "author": "Akiyakov Denis<newsiberian2015@yandex.ru>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/newsiberian/selectel-storage-client/issues"
  },
  "homepage": "https://github.com/newsiberian/selectel-storage-client#readme",
  "dependencies": {
    "got": "^9.4.0"
  },
  "devDependencies": {
    "@types/dotenv": "6.1.0",
    "@types/got": "9.3.0",
    "@types/jest": "23.3.12",
    "@types/node": "10.12.18",
    "dotenv": "6.2.0",
    "faker": "4.1.0",
    "husky": "1.3.1",
    "jest": "23.6.0",
    "lint-staged": "8.1.0",
    "prettier": "1.15.3",
    "rimraf": "2.6.3",
    "rollup": "1.1.0",
    "ts-jest": "23.10.5",
    "ts-node": "7.0.1",
    "tslint": "5.12.1",
    "tslint-config-prettier": "1.17.0",
    "typescript": "3.2.2"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*\\.test\\.ts)$",
    "testPathIgnorePatterns": [
      "/dist/",
      "/node_modules/"
    ],
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ]
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "bracketSpacing": true,
    "trailingComma": "all",
    "parser": "typescript"
  },
  "typings": "dist/index.d.ts",
  "typescript": {
    "definition": "dist/index.d.ts"
  }
}
